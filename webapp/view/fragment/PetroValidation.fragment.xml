<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
	icon="sap-icon://information"
	state="Information"
		contentWidth="450px"
		id="mainDialog"
		title="{i18n>titlePetroValidation}">
		<content>
			<VBox class="sapUiSmallMargin" id="formContainer">
				<f:SimpleForm id="SimpleFormChangeColumn_twoGroups234"
					editable="true"
					layout="ColumnLayout"
					title="{i18n>subTitle} {/supplierS4/SupplierName}"
					columnsM="1"
					columnsL="1"
					columnsXL="1">
					<f:content>
						<Text text="{i18n>messagePetroValidation}" />
					</f:content>
				</f:SimpleForm>
			</VBox>
			<VBox class="sapUiSmallMargin" id="formContainerEmployment" items="{
					path: '/employment'
				}">
				<f:SimpleForm editable="true"
					layout="ColumnLayout"
					title="Personal"
					columnsM="2"
					columnsL="2"
					columnsXL="2">
					<f:content>
						<core:Title text="Information" />
						<Label text="Job Classification" />
						<Input value="{jobTitle}" />
						<Label text="Pay Grade" />
						<Input value="{payGrade}"></Input>
						<Label text="Unit" />
						<Input value="{unit}"></Input>
						<core:Title text="Rating" />
						<Label text="Employee Class" />
						<Input value="{class}" />
						<Label text="FTE" />
						<Input value="{fte}"></Input>
						<Label text="Standard Weekly Hours" />
						<Input change="onChange" value="{
							path: 'weeklyHours',
							type: 'sap.ui.model.type.Integer',
							constraints: {
								maximum: 40
							}
						}"></Input>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
						<Button id="closeDialog"
						text="Fechar"
						type="Default"
						press="_closeDialog($event, 'Welcome')"
						ariaHasPopup="Dialog" />
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>